{
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Debug Mocha Test",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/mocha",
      "runtimeArgs": ["test/**/*.test.js", "--grep", "@test6"],
      "stopOnEntry": false,
      "cwd": "${workspaceFolder}/",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
